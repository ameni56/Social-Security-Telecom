

{% extends 'admin_liste_demande.html.twig' %}
{% block body %}
  <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                          <h6 class="mb-4">Liste des demandes</h6>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Somme</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Piece</th>
                                        <th scope="col">Modifier</th>
                                        <th scope="col">Supprimer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for demande in d %}  
                                    <tr>
                                        
                                        <td>{{demande.nom}}</td>
                                        <td>{{demande.somme}}</td>
                                        <td>{{demande.type}}</td>
                                        <td>{{demande.piece}}</td>
                                          <td><a class="btn btn-success" href="{{ path('modifier_demande',{'id':demande.id}) }}">Modifier</a>
                                          </td>
                                          <td><a class="btn btn-danger" href="{{ path('supprimer_demande',{'id':demande.id}) }}">Supprimer</a>
                                          </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                        
                   
                </div>
            </div>
            {% endblock %}
